#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        // Стандартный слой 
        default_layer {

            bindings = <
// --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// |     ESC     |      1      |      2      |      3      |      4      |      5      |                              |      6      |      7      |      8      |      9      |      0      |      `      |
       &kp ESC       &kp N1        &kp N2        &kp N3        &kp N4        &kp N5                                       &kp N6        &kp N7        &kp N8        &kp N9        &kp N0        &kp GRAVE

// |     TAB     |      Q      |      W      |      E      |      R      |      T      |                              |      Y      |      U      |      I      |      O      |      P      |      -      |
      &kp TAB        &kp Q         &kp W         &kp E         &kp R         &kp T                                        &kp Y         &kp U         &kp I         &kp O         &kp P         &kp MINUS

// |    SHIFT    |      A      |      S      |      D      |      F      |      G      |                              |      H      |      J      |      K      |      L      |      ;      |      '      |
     &kp LSHFT       &kp A         &kp S         &kp D         &kp F         &kp G                                        &kp H         &kp J         &kp K         &kp L         &kp SEMI      &kp SQT

// |    CTRL     |      Z      |      X      |      C      |      V      |      B      |      L3     | |    ENTER     |      N      |      M      |      ,      |      .      |      /      |    SHIFT    |
     &kp LCTRL       &kp Z         &kp X         &kp C         &kp V         &kp B         &mo 3         &kp RET          &kp N         &kp M         &kp COMMA     &kp DOT       &kp FSLH    &kp RSHFT

//                                           |     GUI     |     ALT     |     L1      |    SPACE    | |    SPACE     |     L2      |    BSPC     |     GUI     |
                                                &kp LGUI      &kp LALT        &mo 1      &kp SPACE       &kp SPACE       &mo 2        &kp BSPC       &kp RGUI
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {

            bindings = <
// -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// |             |             |             |             |             |             |                             |             |             |             |             |             |             |
        &trans       &trans        &trans        &trans        &trans        &trans                                      &trans        &trans        &trans        &trans        &trans       &trans

// |             |      !      |      @      |      #      |      $      |      %      |                             |      <      |      >      |      *      |      (      |      )      |      \      |
        &none        &kp EXCL      &kp AT        &kp HASH      &kp DLLR      &kp PRCNT                                   &kp COMMA     &kp DOT       &kp STAR      &kp LPAR      &kp RPAR      &kp BSLH

// |             |             |             |             |             |             |                             |      {      |      }      |      &      |      ^      |             |             |
        &none        &none         &none         &none         &none         &none                                       &kp LBKT      &kp RBKT      &kp AMPS      &kp CARET     &trans        &trans

// |             |             |             |             |             |             |             | |             |      /      |      _      |      +      |      #      |             |             |
        &trans       &trans        &trans        &trans        &trans        &trans        &trans          &trans        &kp FSLH      &kp MINUS     &kp EQUAL     &kp HASH      &none         &trans

//                                           |             |             |             |             | |             |             |             |             |
                                                 &trans        &trans        &trans        &trans          &trans        &trans        &trans        &trans
            >;


            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {

            bindings = <
// -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// |             |             |             |             |             |             |                             |             |             |             |             |             |             |
        &trans       &trans        &trans        &trans        &trans        &trans                                      &trans        &trans        &trans        &trans        &trans        &trans

// |      `      |      1      |      2      |      3      |      4      |      5      |                             |      6      |      7      |      8      |      9      |      0      |             |
        GRAVE        &kp N1        &kp N2        &kp N3        &kp N4        &kp N5                                      &kp N6        &kp N7        &kp N8        &kp N9        &kp N0        &trans

// |             |             |             |             |             |             |                             |             |      <-     |      v      |      ^      |      ->     |             |
        &none        &none         &none         &none         &none         &none                                       &none         &kp LEFT      &kp DOWN      &kp UP        &kp RIGHT     &none

// |             |             |             |             |             |             |             | |             |      /      |      _      |      +      |      {      |      }      |     '|'     |
        &none        &none         &none         &none         &none         &none         &trans          &trans        &kp FSLH      &kp MINUS     &kp EQUAL     &kp LBKT      &kp RBKT      &kp NUBS

//                                           |             |             |             |             | |             |             |             |             |
                                                 &trans        &trans        &trans        &trans          &trans        &trans        &trans        &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        tri_layer {

            bindings = <
// -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// |             |             |             |             |             |             |                             |    PSCRN    |             |             |     INS     |    SLCK     |    PAUSE    |
        &trans       &none         &none         &none         &none         &none                                     &kp PSCRN       &none         &none         &kp INS      &kp SLCK     &kp PAUSE_BREAK

// |             |             |             |             |             |             |                             |             |             |             |             |             |     HOME    |
        &none        &none         &none         &none         &none         &none                                       &none         &none         &none         &none         &none        &kp HOME

// |      F1     |     F2      |     F3      |     F4      |     F5      |     F6      |                             |     DEL     |    PG_UP    |             |             |             |     END     |
       &kp F1       &kp F2        &kp F3        &kp F4        &kp F5        &kp F6                                      &kp DEL      &kp PG_UP       &none         &none         &none        &kp END

// |      F7     |     F8      |     F9      |     F10     |     F11     |     F12     |             | |             |             |    PG_DN    |             |             |             |             |
       &kp F7       &kp F8        &kp F9        &kp F10       &kp F11       &kp F12        &trans          &trans        &none       &kp PG_DN       &none         &none         &none         &none

//                                           |             |             |             |             | |             |             |             |             |
                                                 &trans        &trans        &trans        &trans          &trans        &trans        &trans        &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

    };
};
